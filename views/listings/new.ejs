<% layout("/layouts/boilerplate") %>
<body> 
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <!-- <br><br> -->
           <h3> Create new listing! </h3>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data"> <br>
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>     
            <input type="text" placeholder="Enter a catchy title" name="listing[title]" class="form-control" required>
            <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]" type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Upload Listing Image</lable>
            <input type="file" name="listing[image]" class="form-control" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input name="listing[price]" placeholder="1200" class="form-control" required>
                <div class="invalid-feedback">Price should be valid</div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input type="text" placeholder="India" name="listing[country]" class="form-control" required>
                <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
    
        <div class="mb-3">
            <lable for="title" class="form-label">Location</lable>
            <input type="text" placeholder="Jaipur" name="listing[location]" required>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        
        <button class="btn btn-dark add-btn">Add</button>
    </form>
</div>
</div>